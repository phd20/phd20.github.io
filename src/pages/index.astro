---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import Subscribe from "../components/Subscribe.astro"
import { SITE_TITLE } from "../config";
import TaggedBlogPosts from "src/components/TaggedBlogPosts.astro";
import LatestArticle from "src/components/LatestArticle.astro";
import RandomArticle from "src/components/RandomArticle.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | TTRPG Creator`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <hr />
    <br />
    <Subscribe />
    <LatestArticle />
    <RandomArticle />
    <TaggedBlogPosts title="For 5E Game Masters" tag="5e" />
    <TaggedBlogPosts title="ObsidianMD for Dungeons & Dragons" tag="obsidian" />
    <TaggedBlogPosts title="Worldbuilding for TTRPGs" tag="worldbuilding" />
  </Fragment>
</PageLayout>
