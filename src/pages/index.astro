---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import Subscribe from "../components/Subscribe.astro"
import { SITE_TITLE } from "../config";
import TaggedBlogPosts from "src/components/TaggedBlogPosts.astro";
import LatestArticle from "src/components/LatestArticle.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | TTRPG Creator`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <Subscribe />
    <br />
    <LatestArticle />
    <TaggedBlogPosts title="For 5E Game Masters" tag="5e" />
    <TaggedBlogPosts title="ObsidianMD for Dungeons & Dragons" tag="obsidian" />
    <TaggedBlogPosts title="Worldbuilding for TTRPGs" tag="worldbuilding" />
    <div>
      <h3>More from PhD20</h3>
      <ul>
        <li>
          <a href={`https://patreon.com/phd20`}>Patreon</a>
        </li>
        <li>
          <a href={`https://github.com/phd20/obsidian-ttrpg-vault`}>Obsidian TTRPG Vault</a>
        </li>
        <li>
          <a href={`https://github.com/phd20/rpg`}>RPG Resource Repository</a>
        </li>
      </ul>
    </div>
  </Fragment>
</PageLayout>
